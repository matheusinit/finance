<div class="mx-auto max-w-screen-xl">
  <h2 class="mt-10 flex justify-center space-x-1 text-2xl font-bold leading-9 tracking-tight">
    <div class="text-gray-800">
      Despesa de
    </div>
    <div class="text-purple-700">
      <%= l(@receipt.created_at, format: "%B de %Y") %>
    </div>
  </h2>

  <div class="mt-10 border border-gray-200 rounded-md">
      <div class="w-full px-6 pb-3 pt-3 flex justify-between items-center">
        <div class="flex space-x-2 items-baseline">
          <h4 class="font-bold text-gray-800">
            <%= @receipt.name %>
          </h4>
          <div class="py-1 px-2 rounded-2xl bg-purple-100 text-purple-500 font-bold inline-flex text-xs">
            <% if @incomes.count == 1 %>
              <%= @incomes.count %> item
            <% end %>

            <% if @incomes.count != 1 %>
              <%= @incomes.count %> itens
            <% end %>
          </div>
        </div>

        <div class="flex space-x-2">
          <%= link_to "/income/new", class: "flex items-center text-sm rounded-md bg-green-600 text-white space-x-1 fill-white px-1.5 py-1 shadow hover:bg-green-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-800" do %>
            <%= inline_svg_tag "plus.svg", class: 'size-4' %>

            <span>Ganho</span>
          <% end %>

          <%= link_to "/", class: "flex items-center text-sm rounded-md bg-red-600 text-white space-x-1 fill-white px-1.5 py-1 shadow hover:bg-red-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-800" do %>
            <%= inline_svg_tag "plus.svg", class: 'size-4' %>

            <span>Despesa</span>
          <% end %>
        </div>
      </div>

      <table class="w-full text-left text-gray-500">
        <thead class="text-sm bg-gray-50 border-y border-y-gray-200">
          <tr>
            <th scope="col" class="px-6 py-3">Nome</th>
            <th scope="col" class="px-6 py-3">Tipo</th>
            <th scope="col" class="px-6 py-3">Valor</th>
            <th scope="col" class="px-6 py-3">Recorrente mensalmente</th>
            <th scope="col" class="px-6 py-3">Pago</th>
          </tr>
        </thead>
        <tbody class="text-sm text-gray-700">
          <% @incomes.each do |income| %>
            <tr class="bg-transparent border-b last:border-0">
              <td class="px-6 py-4 whitespace-nowrap font-bold">
                <%= income.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                Despesa
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                R$ <%= income.value %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= income.is_monthly_recurring == true ? "Sim" : "Não" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= income.is_paid == true ? "Sim" : "Não" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
