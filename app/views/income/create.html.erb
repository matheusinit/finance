<div class="mx-auto max-w-screen-xl">
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <form class="space-y-6" data-controller="password-toggle" novalidate method="post" action=<%= "/receipt/#{@receipt_id}/income" %> >
      <%= render "_shared/error" %>

      <div>
        <label for="name" class="block text-sm font-medium leading-6 text-gray-900">Nome</label>
        <div class="mt-2">
          <input id="name" name="name" type="text" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6" autofocus>
        </div>
      </div>

      <div>
        <label for="value" class="block text-sm font-medium leading-6 text-gray-900">Valor</label>
        <div class="mt-2">
          <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-purple-600">
            <span class="flex select-none items-center pl-3 text-gray-500 border-0 text-sm">R$</span>
            <input id="value" name="value" type="number" class="bg-transparent block flex-1 border-0 py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="0.00">
          </div>
        </div>
      </div>

      <div>
        <legend class="block text-sm font-medium leading-6 text-gray-900">Possui recorrência mensal?</legend>
        <div class="mt-2 space-y-1">
          <div class="flex items-center gap-x-3">
            <input type="radio" value="yes" name="is_monthly_recurring" id="yes" class="h-4 w-4 border-gray-300 text-purple-600 focus:ring-purple-600" />
            <label for="yes" class="block text-sm leading-6 text-gray-900">Sim</label>
          </div>

          <div class="flex items-center gap-x-3">
            <input type="radio" value="no" name="is_monthly_recurring" id="no" class="h-4 w-4 border-gray-300 text-purple-600 focus:ring-purple-600" />
            <label for="no" class="block text-sm leading-6 text-gray-900">Não</label>
          </div>
        </div>
      </div>

      <div>
        <label for="payment_date" class="block text-sm font-medium leading-6 text-gray-900">Data de pagamento</label>
        <div class="mt-2">
          <input id="payment_date" name="payment_date" type="number" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6" min="01" max="31">
        </div>
      </div>



      <div>
        <button type="submit" class="flex w-full justify-center rounded-md bg-purple-700 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-800">Criar</button>
      </div>
    </form>
  </div>
</div>
