<div class="mx-auto max-w-screen-xl">
  <%= render "/components/breadcrumb/self" do %>
    <%= render "/components/breadcrumb/link", link: "/" do %>
      In√≠cio 
    <% end %>

    <%= render "/components/breadcrumb/separator" %>

    <%= render "/components/breadcrumb/link", link: "/receipt/" do %>
      Receitas
    <% end %>

    <%= render "/components/breadcrumb/separator" %>

    <%= render "/components/breadcrumb/link", link: "/receipt/#{@receipt_id}" do %>
      <%= @receipt_name %>
    <% end %>

    <%= render "/components/breadcrumb/separator" %>

    <%= render "/components/breadcrumb/current" do %>
      Editar despesa
    <% end %>
  <% end %>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <form class="space-y-6" data-controller="password-toggle" novalidate method="put" action=<%= "/expense/#{@expense.id}/edit" %> >
      <div>
        <label for="name" class="block text-sm font-medium leading-6 text-gray-900">Nome</label>
        <div class="mt-2">
          <input id="name" name="name" type="text" value=<%= @expense.name %> class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6" autofocus>
        </div>
      </div>

      <div>
        <label for="value" class="block text-sm font-medium leading-6 text-gray-900">Valor</label>
        <div class="mt-2">
          <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-purple-600">
            <span class="flex select-none items-center pl-3 text-gray-500 border-0 text-sm">R$</span>
            <input id="value" name="value" type="number" value=<%= @expense.value %> class="bg-transparent block flex-1 border-0 py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="0.00">
          </div>
        </div>
      </div>

      <div>
        <label for="installments_number" class="block text-sm font-medium leading-6 text-gray-900">Parcelamento</label>
        <div class="mt-2">
          <input id="installments_number" name="installments_number" type="number" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6" min="01" placeholder="1" value=<%= @expense.installments_number %> >
        </div>
      </div>

      <div>
        <label for="payment_date" class="block text-sm font-medium leading-6 text-gray-900">Data de pagamento</label>
        <div class="mt-2">
          <input id="payment_date" name="payment_date" type="number" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6" min="01" max="31" value=<%= @expense.payment_day %>>
        </div>
      </div>

      <div>
        <button type="submit" class="flex w-full justify-center rounded-md bg-purple-700 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-800">Atualizar</button>
      </div>
    </form>
  </div>
</div>
