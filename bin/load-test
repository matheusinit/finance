#!/usr/bin/env sh

docker exec -it finance-app1-1 bin/rails db:reset DISABLE_DATABASE_ENVIRONMENT_CHECK=1

(cd test/load/gatling; exec go run ./generate_data.go create-users-data.csv)
(cd test/load/gatling; exec go run ./generate_data.go login-users-data.csv)
(cd test/load/gatling/src/test/resources; exec rm create-users-data.csv)
(cd test/load/gatling/src/test/resources; exec rm login-users-data.csv)
(cd test/load/gatling; exec mv create-users-data.csv ./src/test/resources/create-users-data.csv)
(cd test/load/gatling; exec mv login-users-data.csv ./src/test/resources/login-users-data.csv)
(cd test/load/gatling; exec sbt Gatling/test)

